<UserControl x:Class="Wizard.Views.Pages.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wizard.Views.Pages"
             xmlns:vm="clr-namespace:Wizard.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="LightGray">

    <UserControl.DataContext>
        <vm:vmMainMenu />
    </UserControl.DataContext>

    <StackPanel Orientation="Vertical" Margin="20">

        <RadioButton Content="Search" Command="{Binding Search}" Margin="6" />
        <RadioButton Content="Config" Command="{Binding Config}" Margin="6" />
        <RadioButton Content="Run" Command="{Binding Run}" Margin="6" />

    </StackPanel>

</UserControl>

